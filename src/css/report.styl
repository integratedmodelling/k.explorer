@import '~variables'

#mc-empty-report
  position: absolute;
  width 400px
  height 80px
  left 50%
  top 50%
  margin-left -200px
  margin-top -40px
  padding 0
  text-align center
  font-size 60px
  font-weight bold
  color $info
#mc-report-wrapper
  background-color #eee
  padding 5vh 10vh
  width 100%
  #mc-report-content
    background-color #fff
    height: 100%
    padding 2em
  h1, h2, h3, h4, h5, h6
    font-weight bold
    color $main-control-main-color
  h1
    font-size 2em
    margin 0.6em 0
  h2
    font-size 1.8em
    margin 0.5em 0
  h3
    font-size 1.6em
    margin 0.4em 0
  h4
    font-size 1.4em
    margin 0.3em 0
  h5
    font-size 1.2em
    margin 0.2em 0
  h6
    font-size 1.1em
    margin 0.1em 0
